<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_324"
        android:layout_height="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/lin_bgyin"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_54"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Ying_Name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_17" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_9"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Ying_start"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_28"
                    android:textSize="@dimen/dp_20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_28"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="  --   " />

                <TextView
                    android:id="@+id/Ying_end"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/dp_18" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_54"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Ying_shou"
                android:layout_marginTop="@dimen/dp_14"
                android:textSize="@dimen/dp_23"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:gravity="center"
                android:id="@+id/Ying_Price"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/dp_36" />

            <ImageView
                android:layout_marginLeft="@dimen/dp_10"
                android:id="@+id/Ying_Very"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/com_icon_next_default" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>