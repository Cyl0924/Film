<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ShowActivity"
    android:background="@mipmap/bitmap"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_width="@dimen/dp_295"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="@dimen/dp_120"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="@dimen/dp_6"
                android:src="@mipmap/log_icon_phone_default"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25" />

            <EditText
                android:textColor="@android:color/white"
                android:id="@+id/Login_phone"
                android:hint="手机号"
                android:layout_width="@dimen/dp_245"
                android:layout_height="@dimen/dp_38" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="@dimen/dp_6"
                android:src="@mipmap/log_icon_lock_default"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25" />

            <EditText
                android:textColor="@android:color/white"
                android:id="@+id/Login_pwd"
                android:hint="密码"
                android:layout_width="@dimen/dp_245"
                android:layout_height="@dimen/dp_38" />

            <ImageView
                android:id="@+id/ShowOrHide"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@mipmap/log_icon_eye_default"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_0_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/rember_pwd"
                android:text="记住密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/automatic_login"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="自动登录"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@android:color/white"
                android:id="@+id/to_register"
                android:layout_marginLeft="@dimen/dp_40"
                android:textSize="@dimen/dp_14"
                android:text="快速注册"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:background="@drawable/btn_bag"
            android:gravity="center"
            android:textSize="@dimen/dp_15"
            android:text="登录"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="@dimen/dp_13"
                android:text="----------------------第三方账号登录----------------------"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/to_wechat"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_gravity="center"
                android:src="@mipmap/log_icon_weixin_default"
                android:layout_width="@dimen/dp_33"
                android:layout_height="@dimen/dp_33" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>