<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SelectSeatActivity">

    <LinearLayout
        android:id="@+id/LinPayTicket"
        android:orientation="vertical"
        android:background="@mipmap/filmbgpay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_194">

        <TextView
            android:gravity="center"
            android:id="@+id/SeatName"
            android:background="#917E92"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="@dimen/dp_330"
            android:layout_height="@dimen/dp_23" />


        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="@dimen/dp_330"
            android:layout_height="@dimen/dp_25">

            <TextView
                android:gravity="center"
                android:background="#FFFFFF"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15" />
            <TextView
                android:textColor="@android:color/white"
                android:layout_marginLeft="@dimen/dp_5"
                android:gravity="center"
                android:text="可选"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_25" />

            <TextView
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="#FF9800"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15" />
            <TextView
                android:textColor="@android:color/white"
                android:layout_marginLeft="@dimen/dp_5"
                android:gravity="center"
                android:text="选中"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_25" />

            <TextView
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="#9C1A4B"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15" />
            <TextView
                android:textColor="@android:color/white"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center"
                android:text="已售"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_25" />

            <TextView
                android:gravity="center"
                android:background="@drawable/textdashgap"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15" />
            <TextView
                android:textColor="@android:color/white"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center"
                android:text="最佳观影区"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_25" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_220"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.bw.movie.custom.SeatTable
            android:id="@+id/MoveSeat_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_30"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_155"
        android:background="@mipmap/rectangle16">

    </LinearLayout>

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/LinPay"
        android:layout_alignParentBottom="true"
        android:background="@drawable/corners_popu"
        android:orientation="horizontal"
        android:layout_width="@dimen/dp_334"
        android:layout_height="@dimen/dp_98">

        <TextView
            android:text="合计:"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_20" />

        <TextView
            android:textColor="#917E92"
            android:gravity="center"
            android:textSize="@dimen/dp_20"
            android:text="￥"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24" />

        <TextView
            android:id="@+id/PayMoney"
            android:layout_marginLeft="@dimen/dp_0_5"
            android:textSize="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_50" />

        <ImageView
            android:id="@+id/PayTrue"
            android:src="@mipmap/group2"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"  />

        <ImageView
            android:id="@+id/PayFalse"
            android:src="@mipmap/group3"
            android:layout_marginTop="@dimen/dp_27"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"  />

    </LinearLayout>


</RelativeLayout>