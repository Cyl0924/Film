<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/PopRev_Sim"
            fresco:roundAsCircle="true"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45" />

        <TextView
            android:id="@+id/PopRev_Name"
            android:textSize="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25" />

    </LinearLayout>

    <TextView
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8"
        android:id="@+id/PopRev_Summ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="@dimen/dp_0_5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20">

        <TextView
            android:id="@+id/PopRev_Time"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_20" />

        <ImageView
            android:id="@+id/PopRevComm"
            android:layout_marginLeft="@dimen/dp_100"
            android:src="@mipmap/com_icon_praise_default"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20" />
        <TextView
            android:id="@+id/PopRev_Nums"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_20" />
        <ImageView
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@mipmap/com_icon_comment_default"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/lin_down"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10">

    </LinearLayout>

</LinearLayout>
