<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/corners_popu"
        android:layout_marginTop="@dimen/dp_90"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_24"
                android:text="影评"
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/ReviewDown"
                android:layout_marginLeft="@dimen/dp_210"
                android:src="@mipmap/com_icon_down_default"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"></LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/ReviewRec"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_324"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <ImageView
        android:id="@+id/ReviewPing"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/com_icon_publish_default"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60" />


