<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_90"
        android:background="@drawable/corners_popu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_24"
                android:text="预告片"
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/PrevueDown"
                android:layout_marginLeft="@dimen/dp_190"
                android:src="@mipmap/com_icon_down_default"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30" />

        </LinearLayout>

        <ScrollView
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/Rel1"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/dp_290"
                    android:layout_height="@dimen/dp_200">

                    <SurfaceView
                        android:id="@+id/PrevueSf_1"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="@dimen/dp_290"
                        android:layout_height="@dimen/dp_200" />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/Sf1Sim"
                        android:layout_width="@dimen/dp_290"
                        android:layout_height="@dimen/dp_200" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/dp_290"
                    android:layout_height="@dimen/dp_200">
                    <SurfaceView
                        android:id="@+id/PrevueSf_2"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="@dimen/dp_290"
                        android:layout_height="@dimen/dp_200" />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/Sf2Sim"
                        android:layout_width="@dimen/dp_290"
                        android:layout_height="@dimen/dp_200" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/dp_290"
                    android:layout_height="@dimen/dp_200">

                    <SurfaceView
                        android:id="@+id/PrevueSf_3"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="@dimen/dp_290"
                        android:layout_height="@dimen/dp_200" />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/Sf3Sim"
                        android:layout_width="@dimen/dp_290"
                        android:layout_height="@dimen/dp_200" />

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>