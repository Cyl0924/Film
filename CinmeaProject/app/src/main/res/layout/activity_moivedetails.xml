<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MoiveDetailsActivity"
    android:background="@mipmap/movie_bg_vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="@dimen/dp_325"
        android:layout_height="@dimen/dp_24">

        <ImageView
            android:src="@mipmap/com_icon_movie_default"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22" />

        <TextView
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dp_14"
            android:text="电影详情"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_22" />

        <ImageView
            android:id="@+id/Moive_love"
            android:layout_marginLeft="@dimen/dp_200"
            android:src="@mipmap/com_icon_collection_default"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Moive_lin"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_260"
        android:layout_height="443dp">

        <TextView
            android:textSize="@dimen/dp_25"
            android:textColor="@android:color/white"
            android:id="@+id/Moive_name"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_28" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/Moive_sim"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_42"
            android:layout_width="@dimen/dp_260"
            android:layout_height="match_parent" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_above="@id/Linssss"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_below="@id/Moive_lin"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_35"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/Moive_Details"
            android:background="@drawable/corners_tvselect"
            android:gravity="center"
            android:textSize="@dimen/dp_14"
            android:textColor="@android:color/white"
            android:text="详情"
            android:layout_width="@dimen/dp_59"
            android:layout_height="@dimen/dp_28" />
        <TextView
            android:id="@+id/Moive_Prevue"
            android:background="@drawable/corners_tvselect"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center"
            android:textSize="@dimen/dp_14"
            android:textColor="@android:color/white"
            android:text="预告"
            android:layout_width="@dimen/dp_59"
            android:layout_height="@dimen/dp_28" />
        <TextView
            android:id="@+id/Moive_photo"
            android:background="@drawable/corners_tvselect"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center"
            android:textSize="@dimen/dp_14"
            android:textColor="@android:color/white"
            android:text="剧照"
            android:layout_width="@dimen/dp_59"
            android:layout_height="@dimen/dp_28" />
        <TextView
            android:id="@+id/Moive_Evaluate"
            android:background="@drawable/corners_tvselect"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center"
            android:textSize="@dimen/dp_14"
            android:textColor="@android:color/white"
            android:text="影评"
            android:layout_width="@dimen/dp_59"
            android:layout_height="@dimen/dp_28" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Linssss"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Moive_Fan"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:src="@mipmap/com_icon_my_defaultfanhui" />

        <TextView
            android:id="@+id/Moive_Pay"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_160"
            android:background="@drawable/corners_tvpay"
            android:gravity="center"
            android:text="购票"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dp_20" />

    </LinearLayout>

</RelativeLayout>