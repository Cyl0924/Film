<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailsActivity">


    <LinearLayout
        android:id="@+id/Details_Lin"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/cinemadetail_icon_location_default"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_width="@dimen/dp_327"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Detail_hotFilm"
            android:text="热门电影"
            android:gravity="center"
            android:textSize="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/corners_tv"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_20" />

        <TextView
            android:id="@+id/Detail_ReleseFilm"
            android:text="正在热映"
            android:gravity="center"
            android:textSize="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_30"
            android:background="@drawable/corners_tv"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_20" />

        <TextView
            android:id="@+id/Detail_ComingFilm"
            android:text="即将上映"
            android:gravity="center"
            android:textSize="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_30"
            android:background="@drawable/corners_tv"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_20" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/Detalis_RecId"
        android:layout_marginTop="@dimen/dp_90"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_327"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <ImageView
        android:id="@+id/Fanhui_img"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="23dp"
        android:src="@mipmap/com_icon_my_defaultfanhui" />
    
</RelativeLayout>